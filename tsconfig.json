{
    "compilerOptions": {
        "target": "es2018",
        "module": "commonjs",
        "sourceMap": true,
        "esModuleInterop": true,
        "declaration": true,
        "moduleResolution": "node",
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "skipLibCheck": true,
    },
    "typeAcquisition": {
        "enable": true
    },
    "include": [
        "./src"
    ],
    "exclude": [
        "node_modules"
    ],
    "baseUrl": "./src"
}
