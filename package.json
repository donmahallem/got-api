{
    "name": "got-server",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "test": "mocha --opts ./test/.mocha.opts src/**/*.spec.ts",
        "build": "tsc --sourceMap --outDir ./build/",
        "build:watch": "tsc --sourceMap --watch --outDir ./build/",
        "test-ci": "nyc npm run test",
        "start": "npm run build:live",
        "build:live": "nodemon --watch src/**/*.ts --exec ts-node src/index.ts --port 80",
        "build-crawler:live": "nodemon --watch src/**/*.ts --exec ts-node src/crawler.ts",
        "build:doc": "node ./node_modules/typedoc/bin/typedoc --out ./tt2/ --mode modules --exclude /**/index ./src/",
        "coverage:remap": "remap-istanbul -i ./coverage/coverage.json -o ./coverage/lcov.info --exclude node_modules --type lcovonly"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@types/chai": "^3.4.35",
        "@types/cookie-parser": "^1.3.30",
        "@types/expect": "^1.20.0",
        "@types/express": "^4.0.35",
        "@types/jsonwebtoken": "^7.2.0",
        "@types/mocha": "^2.2.40",
        "@types/nconf": "0.0.37",
        "@types/node": "^7.0.5",
        "@types/passport": "^0.3.3",
        "@types/passport-http-bearer": "^1.0.30",
        "@types/redis": "^2.8.6",
        "@types/serve-static": "^1.7.31",
        "@types/sinon": "^1.16.35",
        "@types/supertest": "^2.0.0",
        "@types/through2": "^2.0.32",
        "argparse": "^1.0.9",
        "body-parser": "^1.15.2",
        "cookie": "^0.3.1",
        "cookie-parser": "^1.4.3",
        "express": "^4.14.0",
        "helmet": "^3.4.1",
        "jsonwebtoken": "^8.3.0",
        "moment": "^2.17.1",
        "nconf": "^0.8.4",
        "passport": "^0.4.0",
        "passport-http-bearer": "^1.0.1",
        "pug": "^2.0.0-beta11",
        "redis": "^2.7.1",
        "serve-static": "^1.11.1",
        "through2": "^2.0.3"
    },
    "devDependencies": {
        "chai": "^4.1.2",
        "chai-http": "^3.0.0",
        "grunt": "^1.0.1",
        "grunt-apidoc": "^0.11.0",
        "grunt-contrib-pug": "^1.0.0",
        "grunt-contrib-uglify": "^4.0.0",
        "grunt-jsbeautifier": "^0.2.13",
        "istanbul": "^0.4.5",
        "karma": "^1.5.0",
        "karma-chai": "^0.1.0",
        "karma-mocha": "^1.3.0",
        "karma-sinon": "^1.0.5",
        "mocha": "^3.2.0",
        "nodemon": "^1.11.0",
        "nyc": "^10.2.0",
        "remap-istanbul": "^0.9.1",
        "sinon": "^2.0.0",
        "sinon-chai": "^3.2.0",
        "supertest": "^3.0.0",
        "ts-node": "^2.1.0",
        "typedoc": "^0.5.7",
        "typescript": "^2.2.1"
    },
    "nyc": {
        "include": [
            "src/*.ts",
            "src/**/*.ts"
        ],
        "exclude": [
            "typings"
        ],
        "extension": [
            ".ts"
        ],
        "require": [
            "ts-node/register"
        ],
        "reporter": [
            "json",
            "html",
            "lcov"
        ],
        "all": true
    }
}